<div class="login-wrapper">
    <div class="login-container">
        <form class="welcome-form" action="">
            <div class="welcome-content">
                <h1>WELCOME</h1>
            <div class="input-container">
                <label for="email">Email</label>
                <input type="email" name="email" id="email"  placeholder="Enter your email" required>
            </div>
            <div class="input-container">
                <label for="password">Password</label>
                <input type="password" name="password" id="password"  placeholder="Enter your password" required>
            </div>
            <p class="forgot_psw"><a href="#">Forgot Password?</a></p>
            <div>
                <button type="submit">
                    Login
                </button>
            </div>
            <p class="align-center">Don't have an account?<span><a href="/register"> Sign Up</a></span></p>
            </div>
        </form>
        <div class="login-img-container">
            <img src="/img/man-books-cartoon-vector.jpg" alt="man sitting on huge pile of books">
        </div>
    </div>
</div>