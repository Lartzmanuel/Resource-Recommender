<div class="wrapper">

    <form action="">
            <p class="header">REGISTER</p>
        <div class="name-wrap">
            <label class="label">NAME</label>
            <input class="input" type="text" id="name" name="name" required>
        </div>
        <div class="flex">
            <div class="DOB-wrap">
                <label class="label">DATE OF BIRTH</label>
                <input class="input" type="date" id="DOB" name="DOB" required>
            </div>
            <div class="pin-wrap">
                <label class="label">PIN</label>
                <input class="input" type="text" id="pin" name="pin" required>
            </div>
        </div>
        
        <div class="email-wrap">
            <label class="label">EMAIL</label>
            <input class="input" type="email" id="email" name="email" placeholder="youremail@gmail.com" required>
        </div>
        <div class="address-wrap">
            <label class="label">HOUSE ADDRESS</label>
            <input class="input" type="text" id="address" name="address" required>
        </div>
        <div class="occupation-wrap">
            <label class="label">OCCUPATION</label>
            <input class="input" type="text" id="occupation" name="occupation" required>
        </div>
        <div class="telephone-wrap">
            <label class="label">MOBILE NUMBER</label>
            <input class="input" type="text" id="telephone" name="telephone" required>
        </div>
        <div class="ID-wrap">
            <label class="label">NATIONAL ID (GHANA CARD)</label>
            <input placeholder="GHA-XXXXXXXXX-X" class="input" type="text" id="national-id" name="national-id" required>
        </div>
        <div class="gender-wrap">
            <p class="label">GENDER</p>
            <input type="radio" id="male-gender" name="gender" value="male" required>
            <label for="male-gender" class="label">MALE</label>
            <input type="radio" id="female-gender" name="gender" value="female" required>
            <label class="label" for="female-gender">FEMALE</label>
        </div>
        <div>
            <button class="btn" type="submit">SIGN UP</button>
        </div>
    </form>
    
</div>